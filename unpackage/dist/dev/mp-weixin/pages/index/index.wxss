.index {
  height: 100%;
  display: flex;
  position: relative;
  background: #efefef;
  box-sizing: border-box;
  flex-direction: column;
}
.index .swiper-wrap {
  height: 451rpx;
}
.index .content {
  flex: 1;
  width: 100%;
}
.index .content .image {
  height: 690rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
  position: relative;
  border-radius: 8rpx;
}
.index .content .image image {
  width: 100%;
  height: 100%;
}
.index .content .image .text {
  left: 0%;
  width: 100%;
  bottom: 42%;
  color: #fff;
  font-size: 66rpx;
  text-align: center;
  position: absolute;
  font-weight: bolder;
  text-shadow: 0px 0rpx 10rpx orangered;
}
.index .content .image .text > view:last-child {
  text-shadow: 0px 0rpx 10rpx blue;
}